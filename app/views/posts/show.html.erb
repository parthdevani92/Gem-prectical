
<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Body:</strong>
  <%= @post.body %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
# app/views/documents/_versions.html.erb
<h2>Previous Versions</h2>
 
<table class='table'>
  <thead>
    <tr>
      <th>Index</th>
      <th>Date</th>
      <th>Author</th>
      <th>Event</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>
 
  <tbody>
    <%- @post.versions.reverse.each do |version| %>
      <tr>
        <td><%= version.index %></td>
        <td><%= version.created_at %></td>

        <td><%= version.event.humanize %></td>
        <td><%= link_to 'Diff', diff_post_version_path( @post , version) %></td>
        <td><%= link_to 'Rollback', rollback_post_version_path( @post , version), method: 'PATCH' %></td>
      </tr>
    <% end %>
  </tbody>
</table>
